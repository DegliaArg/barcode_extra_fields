<odoo>
  <template id="barcode_lines_custom_fields" inherit_id="stock_barcode.picking_line">
    <xpath expr="//div[@class='o_barcode_line_info']" position="inside">
      <t t-if="props.line.x_studio_posiciones">
        <div class="o_barcode_custom_info">
          <strong>Posiciones:</strong>
          <t t-foreach="props.line.x_studio_posiciones" t-as="pos">
            <span t-esc="pos.display_name" class="badge badge-info"/>
          </t>
        </div>
      </t>
    </xpath>
  </template>
</odoo>
